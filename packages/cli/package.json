{
  "name": "@refraction-ui/cli",
  "version": "0.1.0",
  "type": "module",
  "description": "Refraction UI command line interface",
  "bin": {
    "refraction": "dist/index.js"
  },
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "vitest run",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm run test",
    "storybook:test": "echo 'Storybook tests not implemented yet'",
    "size:check": "echo 'Size check not implemented yet'",
    "size:analyze": "echo 'Size analysis not implemented yet'",
    "a11y": "echo 'A11y tests not implemented yet'"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "cosmiconfig": "^8.3.6",
    "fs-extra": "^11.1.1",
    "js-yaml": "^4.1.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.8.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.50.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "cli",
    "ui",
    "components",
    "refraction",
    "design-system"
  ],
  "author": "Refraction UI Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}
