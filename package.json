{
  "name": "refraction-ui-root",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.13.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint . --ext .ts",
    "test": "vitest",
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r run typecheck",
    "test:coverage": "pnpm -r run test:coverage",
    "storybook:test": "pnpm -r run storybook:test",
    "size:check": "pnpm -r run size:check",
    "size:analyze": "pnpm -r run size:analyze",
    "a11y": "pnpm -r run a11y"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "turbo": "^2.5.5"
  }
}
